# String de conexão com o banco de dados PostgreSQL
CONNECTION_STRING=Host=<seu-host>;Database=<seu-banco>;Username=<seu-usuario>;Password=<sua-senha>;SSL Mode=Require;Trust Server Certificate=true

# URL do frontend (onde o front está rodando localmente)
FRONTEND_URL=http://localhost:5173

# Chave secreta para assinar o token JWT (troque por um valor seguro)
JWT_KEY=<uma-chave-secreta-aleatoria>

# Informações do emissor e audiência do token JWT
JWT_ISSUER=SalesAPI
JWT_AUDIENCE=SalesAPIUsers

# Tempo de expiração do token JWT em minutos
JWT_EXPIRE_MINUTES=60
